{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "target": "ES2022",
    "module": "commonjs",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "allowJs": true,
    "outDir": "./dist",
    "noEmit": true,
    "sourceMap": true,
  },
  "include": [
    "src/**/*",
    "./**/*.ts"
  ],
  "exclude": [
    "node_modules/**/*",
    "**/*.test.ts",
    ".serverless/**/*",
    ".webpack/**/*",
    "_warmup/**/*",
    ".vscode/**/*"
  ],
  "dummy": {
    "module": "ES2022",
  }
}